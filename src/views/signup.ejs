    <script>
      function formValidate(){

       let email=document.getElementById("email").value;
       let emailerr=document.getElementById("err_email");
       let pass=document.getElementById("password");
       let passerr=document.getElementById("err_pass");
       let fn=document.getElementById("fn");
       let fnerr=document.getElementById("err_fn");
       let pass2=document.getElementById("password2");
       let passerr2=document.getElementById("err_pass2");

       let emailCheck= /^([a-zA-Z0-9\._]{1,30})@([a-zA-Z0-9\-]{1,20}).([A-Za-z]{2,6})?.([a-zA-Z]{2,5})/;
       let flag=1;

       if (fn.value.trim() ===""){
        fnerr.innerHTML=" **Field cannot be empty";
         flag=0;
       }
       
       if(!emailCheck.test(email)){
         emailerr.innerHTML=" **Invalid Format";
         flag=0;
       }
       if (pass.value.trim() ===""){
         passerr.innerHTML=" **Field cannot be empty";
         flag=0;
       }

       if (pass2.value.trim() ===""){
         passerr2.innerHTML=" **Field cannot be empty";
         flag=0;
       }

       if(pass.value !== pass2.value){
        passerr2.innerHTML=" **Passwords are not matched";
         flag=0;
       }

       if(flag==1)
       {
         return true;
       }
       else return false;
      }

   </script>
    
    
