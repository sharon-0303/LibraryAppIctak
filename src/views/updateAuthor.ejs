    <script>
      function formValidate(){

       let name=document.getElementById("name");
       let nameerr=document.getElementById("aname_err");
       let genre=document.getElementById("genre");
       let gerr=document.getElementById("agenre_err");
       let book=document.getElementById("books");
       let bookerr=document.getElementById("abook_err");
       let img=document.getElementById("file");
       let imgerr=document.getElementById("aimg_err");

       let flag=1;

       if (name.value.trim() ===""){
        nameerr.innerHTML=" **Field cannot be empty";
         flag=0;
       }

       if (genre.value.trim() ===""){
        gerr.innerHTML=" **Field cannot be empty";
         flag=0;
       }

       if (book.value.trim() ===""){
        bookerr.innerHTML=" **Field cannot be empty";
         flag=0;
       }

       if(img.value === ""){
        imgerr.innerHTML=" Please upload image";
        flag=0;
       }

       if(flag==1)
       {
        alert("Successfully updated Author!!");
         return true;
       }
       else {       
         return false;
      }
    }
   </script>
    
